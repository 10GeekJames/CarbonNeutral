@inject IStringLocalizer<WskNavMenuLanding> Localize

<style>
    .mud-link {
        color: rgba(216,216,216,0.5) !important;
        font-weight: 500 !important;
        text-shadow: 1px 1px 2px black;
        font-size: 2rem !important;
    }
    .selected-link {
        color: rgba(255,255,255,0.74) !important;
        text-shadow: 0px 0px 7px lime, 1px 1px 2px black !important;
    }
    .selected-scale {
        transform: scale(1.1) !important;}
</style>
@* Not authenticated *@
<MudContainer>
    <MudStack Row="true" Class="ml-16" Spacing="8">
        <MudLink Href="/" Underline="Underline.None" Class=@_homeClass OnClick="@(() => SetCurrentPageClass("home"))">Home</MudLink>
        <MudLink Href="/wsk/allgames" Underline="Underline.None" Class=@_playClass OnClick="@(() => SetCurrentPageClass("play"))">Play</MudLink>
        <MudLink Href="/wsk/help" Underline="Underline.None" Class=@_helpClass OnClick="@(() => SetCurrentPageClass("help"))">Help</MudLink>
        <MudLink Href="/wsk/about" Underline="Underline.None" Class=@_aboutClass OnClick="@(() => SetCurrentPageClass("about"))">About</MudLink>
    </MudStack>
</MudContainer>

@code {
    private string _homeClass {get; set;} = "selected-link selected-scale";
    private string _playClass {get; set;} = "";
    private string _helpClass {get; set;} = "";
    private string _aboutClass {get; set;} = "";

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();     
    }

    private void SetCurrentPageClass(string page) {
        if (page == "play") {
            _homeClass = "";
            _playClass = "selected-link selected-scale";
            _helpClass = "";
            _aboutClass = "";
        }
        else if (page == "help") {
            _playClass = "";
            _homeClass = "";
            _helpClass = "selected-link selected-scale";
            _aboutClass = "";
        }
        else if (page == "about") {
            _aboutClass = "selected-link selected-scale";
            _playClass = "";
            _helpClass = "";
            _homeClass = "";
        }
        else {
            _homeClass = "selected-link selected-scale";
            _playClass = "";
            _helpClass = "";
            _aboutClass = "";
        }
    }

}