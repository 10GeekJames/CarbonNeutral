@inject IStringLocalizer<WskNavMenu> Localize

<style>
    .mud-link {
        color: rgba(216,216,216,0.5) !important;
        font-weight: 500 !important;
        text-shadow: 1px 1px 2px black;
        font-size: 2rem !important;
    }
    .mud-link:hover {
        color: rgba(255,255,255,0.74) !important;
        text-shadow: 0px 0px 7px deepskyblue, 1px 1px 2px black !important;
    }
    .mud-button:hover {
        color: rgba(255,255,255,0.74) !important;
        text-shadow: 0px 0px 7px deepskyblue !important;
    }
    @* .highlight-shadow {
        color: rgba(255,255,255,0.74) !important;
        text-shadow: 0px 0px 7px lime, 1px 1px 2px black !important;
    }
    .selected-scale {
        transform: scale(1.1) !important;} *@
</style>
@* Not authenticated *@
<MudContainer>
    <MudStack Row="true" Class="ml-16" Spacing="8">
        <MudLink Href="/" Underline="Underline.None" Class=@(SelectedPageClass == "home" ? "highlight-shadow selected-scale" : "") OnClick="@(() => SetCurrentPageClass("home"))">Home</MudLink>
        <MudLink Href="/wsk/allgames" Underline="Underline.None" Class=@(SelectedPageClass == "play" ? "highlight-shadow selected-scale" : "") OnClick="@(() => SetCurrentPageClass("play"))">Play</MudLink>
        <MudLink Href="/wsk/help" Underline="Underline.None" Class=@(SelectedPageClass == "help" ? "highlight-shadow selected-scale" : "") OnClick="@(() => SetCurrentPageClass("help"))">Help</MudLink>
        <MudLink Href="/wsk/about" Underline="Underline.None" Class=@(SelectedPageClass == "about" ? "highlight-shadow selected-scale" : "") OnClick="@(() => SetCurrentPageClass("about"))">About</MudLink>
    </MudStack>
</MudContainer>

@code {
    [Parameter]
    public string SelectedPageClass { get; set; }
    [Parameter] 
    public EventCallback<string> OnPageLinkClick { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        var currentPage = NavigationManager.Uri;
        Console.WriteLine($"Current page: {currentPage}");
        if (currentPage.Contains("allgames")) {
            SetCurrentPageClass("play");
        } else if (currentPage.Contains("help")) {
            SetCurrentPageClass("help");
        } else if (currentPage.Contains("about")) {
            SetCurrentPageClass("about");
        } else {
            SetCurrentPageClass("home");
        };
    }

    private void SetCurrentPageClass(string page) {
        OnPageLinkClick.InvokeAsync(page);
    }

}