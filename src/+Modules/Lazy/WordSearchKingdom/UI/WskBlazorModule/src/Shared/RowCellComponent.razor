@inject IStringLocalizer<RowCellComponent> Localize

@if (IsSelected)
{
    <MudText Color="Color.Success">@RowCell</MudText>
    
} else if (IsCompleted)
{
    <MudText Color="Color.Warning">@RowCell</MudText>
} else {
    <MudText>@RowCell</MudText>
}

@code {
    [Parameter]
    public char RowCell {get;set;}
    [Parameter]
    public bool IsSelected {get;set;}= false;
    [Parameter]
    public bool IsCompleted {get;set;}= false;
    
}
