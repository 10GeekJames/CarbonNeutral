@page "/wsk/allgames"

@inject IStringLocalizer<AllGames> Localize

<PageTitle>Word Search Kingdom - All Games</PageTitle>

<MudContainer Class="pl-0 pr-0 pr-md-4 pl-md-4" MaxWidth="MaxWidth.ExtraExtraLarge">
    @if (_showGame == false)
    {
        <AllGamesComponent OnChosenGame="@HandleChosenGame" />
    }
    else
    {
        <GameComponent Game="@_chosenGame" OnEndGame="@HandleEndGame"  />
    }
</MudContainer>


@code {
    private GameViewModel _chosenGame { get; set; }
    private bool _showGame { get; set; }
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    public async Task HandleChosenGame(GameViewModel game)
    {
        _chosenGame = game;
        _showGame = true;
        StateHasChanged();
    }
    public async Task HandleEndGame(bool endGame)
    {
        _chosenGame = null;
        _showGame = false;
        StateHasChanged();
    }

    
}